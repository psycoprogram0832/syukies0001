<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
<%= form_with model: @syukie, local: true do |f|%>
  <div class="field">
    <%= f.label :date, "❤︎Date❤︎" %><br />
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-birth',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :image, "❤︎PHOTO❤︎" %><br />
    <%= f.file_field :image, id:"syukie_image" %>
  </div>

  <div class="field">
    <%= f.label :point, "❤︎今日のしゅきポイント❤︎" %><br />
    <%= f.text_field :point, class: :form__text, id:"syukie_point" %>
  </div>

  <div class="field">
    <%= f.label :diary, "❤︎DIARY❤︎" %><br />
    <%= f.text_area :diary, class: :form__text, id:"syukie_diary" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>