<h2>マイページ編集</h2>
<%= link_to "Back", :back %>
<div class ="frame">
  <div class="login_form">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :email %></div><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i></div><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :password_confirmation %></div><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></div><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="login_form_btm">
        <div class = "form_name">   
        <%= f.label :nickname, "あなたの名前" %></div><br />
        <%= f.text_field :nickname, id:"user_name" %>
      </div>
      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :syuki_name, "しゅきぴの名前" %></div>
        <br />
        <%= f.text_field :syuki_name, id:"syuki_name" %>
      </div>
      <div class="login_form_btm">
        <div class = "form_name">
        <%= f.label :profile, "二人のプロフィール" %></div><br />
        <%= f.text_area :profile, class: :form__text, id:"profile" %>
      </div>

      <div class='login_form_btm'>
        <div class = "form_name">
        <label class="form-text">since</label>
        </div>
      </div>
      <div class='input-since-wrap'>
        <%= raw sprintf(
                      f.date_select(
                        :since,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <div class ='avatar_form'>
        <div class ="form_name">
        <%= f.label :avatar, "写真を選択（アイコン）"%></div>
        <%= f.file_field :avatar, onchange: 'previewImage()', class: 'form-control' %>
      </div>
      <div class="actions">
      <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
<h3>退会する場合はこちら</h3>

<p>本当? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
